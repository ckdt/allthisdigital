---
import { storyblokEditable, renderRichText } from "@storyblok/astro";

const { blok } = Astro.props;
const renderedRichText = renderRichText(blok.content);
let media = blok.media;

console.log(media);
---

<!--
  # Available bloks
  {blok.title}
  {blok.subtitle}
  {blok.client}
  {blok.cover_image}
  {blok.teaser}
  {blok.content}
  {blok.media}
  {blok.link}
  {blok.credits}
-->
<article {...storyblokEditable(blok)}>
  <img
    class="w-full h-[360px] lg:h-[450px] object-cover"
    alt={blok.cover_image.alt}
    src={`${blok.cover_image.filename}/m/1600x0`}
  />
  <div class="container mx-auto mb-12">
    <h1 class="text-6xl text-[#50b0ae] font-bold mt-12 mb-4">
      {blok.title}
    </h1>
    <h2 class="text-2xl text-[#1d243d] font-bold mb-4">
      {blok.subtitle}
    </h2>
    <div class="prose" set:html={renderedRichText} />
  </div>
</article>
