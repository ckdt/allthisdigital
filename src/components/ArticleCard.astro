---
import { getTransLink } from "../utils/langs";
const { language, content } = Astro.props;
---

<article class="column feature bg-gray-100 rounded">
  <img
    class="object-cover object-center w-full lg:h-48 md:h-36 rounded"
    src={`${content.cover_image.filename}/m/360x240`}
    alt={content.cover_image.alt}
  />
  <div class="p-4">
    <h1 class="text-2xl font-semibold lg:text-3xl">
      {content.title}
    </h1>
    <p class="leading-relaxed text-gray-700 line-clamp-2 my-4">
      {content.teaser}
    </p>
    <a
      href={`/articles/${content.slug}`}
      class="font-semibold text-blue-600 hover:underline"
      title="read more"
    >
      <a
        href={getTransLink(language, `/blog/${content.slug}`)}
        class="font-semibold text-blue-600 hover:underline"
        title="read more"
      >
        Read More Â»
      </a>
    </a>
  </div>
</article>
